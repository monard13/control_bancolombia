NODE_ENV=development
PORT=5000
DATABASE_URL=postgresql://your-database-url-here
SESSION_SECRET=f2e9a3b5c8d7e6f1a4b2c9d8e5f3a7b4c1d6e9a2b5c8d7
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_CREDENTIALS={"type": "service_account", "project_id": "your-project-id"}
OPENAI_API_KEY=your-openai-api-key

# Object Storage (Google Cloud Storage compatible)
# Use a service account JSON only if you are NOT on Replit.
# On Render/other hosts, set:
# - GCS_SERVICE_ACCOUNT_JSON to the raw JSON of your service account
# - PRIVATE_OBJECT_DIR to "/<bucket-name>/<private-prefix>" (leading slash required)
# - PUBLIC_OBJECT_SEARCH_PATHS to one or more "/<bucket>/<public-prefix>" paths, comma-separated
GCS_SERVICE_ACCOUNT_JSON=
PRIVATE_OBJECT_DIR=/your-bucket/private
PUBLIC_OBJECT_SEARCH_PATHS=/your-bucket/public

# Configuración de seguridad
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100
CORS_ALLOWED_ORIGINS=http://localhost:5000,http://localhost:3000

# Configuración de caché
CACHE_TTL=300  # 5 minutos
CACHE_CHECK_PERIOD=60  # 1 minuto

# Configuración de logging
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log
